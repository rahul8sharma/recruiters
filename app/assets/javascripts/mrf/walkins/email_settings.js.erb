function selectStakeholderInvitationTemplate() {
  var id = $("#select_stakeholder_invitation_template").find(":selected").val();
  var body = $("#select_stakeholder_invitation_template").find(":selected").attr("body");
  if(body !== undefined) {
    $(".stakeholder_invitation_template_id").val(id);
  }
}

function selectUserInvitationTemplate() {
  var id = $("#select_user_invitation_template").find(":selected").val();
  var body = $("#select_user_invitation_template").find(":selected").attr("body");
  if(body !== undefined) {
    $(".user_invitation_template_id").val(id);
  }
}

$(document).ready(function(){
  selectStakeholderInvitationTemplate();
  selectUserInvitationTemplate();
});

