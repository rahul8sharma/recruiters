function selectUserInvitationTemplate() {
  var body = $("#select_user_invitation_template").find(":selected").attr("body");
  var subject = $("#select_user_invitation_template").find(":selected").attr("subject");
  var from = $("#select_user_invitation_template").find(":selected").attr("from");
  $(".email-body-user-invitation").html("<i>"+body+"</i>");
  $(".email-subject-user-invitation").html("<i>"+subject+"</i>");
  $(".email-from-user-invitation").html("<i>"+from+"</i>");
  var id = $("#select_stakeholder_invitation_template").find(":selected").val();
  console.log(id);
  if(body !== undefined) {
    $(".user_invitation_template_id").val(id);
  }
}

