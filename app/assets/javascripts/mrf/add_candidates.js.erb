function selectCandidateInvitationTemplate() {
  var body = $("#select_candidate_invitation_template").find(":selected").attr("body");
  var subject = $("#select_candidate_invitation_template").find(":selected").attr("subject");
  var from = $("#select_candidate_invitation_template").find(":selected").attr("from");
  if(body) {
    $(".default-email-candidate-invitation").hide();
    $(".custom-email-candidate-invitation").show();
    $(".email-body-candidate-invitation").html("<i>"+body+"</i>");
    $(".email-subject-candidate-invitation").html("<i>"+subject+"</i>");
    $(".email-from-candidate-invitation").html("<i>"+from+"</i>");
  } else {
    $(".custom-email-candidate-invitation").hide();
    $(".default-email-candidate-invitation").show();
  }
}

