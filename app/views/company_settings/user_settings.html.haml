- if params[:users].present?
  = content_for :alert do
    .alert.alert-error
      %a{"data-dismiss" => "alert", :type => "button"}
      .pull-left
        Are you sure you want to remove these Users  
      .pull-right
        = link_to "YES",confirm_remove_users_company_path(@company, :user_ids => params[:users].keys.join("|"))
        \| 
        = link_to "NO", user_settings_company_path(@company)
      .clr  
.company_user_setting
  .page-title
    .divider1
    Settings

  .divider2
  = render :partial => "shared/settings-content-sub-nav"
  = form_for @company, :as => :company, url: remove_users_company_path(@company), method: :put do |f|
    
    .padding-all2.border-warning.shifted-up1
      .pull-right
        %button.btn.btn-warning.inverse.big-text.pull-left
          Remove Users
        %a.btn.btn-warning.big-text.span{ href: add_users_company_path(@company) }
          Add New User
        .clr
      .clr
      .divider3
      .list-snippet-titles.big-text.clearfix
        %a.span3.left-offset1.first{:href => "#", :title => "User ID"}
          User ID
          %i.icon-chevron-down.small-text.line-height1
        %a.span10{:href => "#", :title => "Name"}
          Name
          %i.icon-chevron-down.small-text.line-height1
        .span10
          Email id
        %a.span{:href => "#", :title => "Date Added"}
          Date Added
          %i.icon-chevron-down.small-text.line-height1
        .clr
        .divider2
      %ul
        - @users.each do |user|
          %li.list-snippet.border-bottom-grayLighter
            .span1.first
              %input{:type => "checkbox", name: "users[#{user.id}]", checked: (params[:users].keys.include?(user.id.to_s))}
            .span3
              #{user.id}
            .span10
              = user.name
            .span10
              = user.email
            .span
              = hdate user.created_at
            .clr
            .divider1
      .divider2
      - if @users.present?
        .pull-right
          .muted.extra-medium-text
            .span.line-height2
              Go to Page
            %select.span2{onchange:"location = this.options[this.selectedIndex].value;"}
              - @users.total_pages.times do |page|
                %option{selected: params[:page].to_i == (page + 1), value: user_settings_company_path(@company, params.merge(:page => page + 1)), }
                  = page + 1
            .clr
        .clr.divider3
