- checked = (params[:upload_method] == "manual")
%li
  %input{name: "users[#{index-1}][industry_id]", type: "hidden", value: @company.industry_id}
  - klass = @errors.keys.include?((index-1).to_s) ? "error" : ""
  .control-group{ class: klass }
    .span2
      .count.badge.badge-small.inverse 
        = index
    %input.span9.medium-text.first{name: "users[#{index-1}][name]", disabled: !checked, type: "text", placeholder: "Name", value: (user[:name])}
    %input.span9.medium-text.left-offset1{name: "users[#{index-1}][email]", disabled: !checked, type: "text", placeholder: "Email id", value: (user[:email])}
    / %input.span3.left-offset1{name: "users[#{index-1}][mobile]", disabled: !checked, type: "text", placeholder: "Mobile Number", value: (user[:mobile])}
    .clr
