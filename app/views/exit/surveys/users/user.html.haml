.user-details
  .span22.first.page-title
    .divider1
    Survey #{@survey.id} - #{@survey.name}
  
  %a.btn.btn-warning.big.big-text.pull-right.span{:href=>users_company_exit_survey_path(:company_id => params[:company_id], :id => params[:id]), :title=>"View All Candidates"}
    View All Candidates
  .clr
  .divider2
  = render :partial => "shared/exit/survey-sub-nav"

  .padding-all2.border-warning.shifted-up1.extra-medium-text
    .span19.margin-auto
      %ul
        %li.border-bottom-grayLighter.padding-all1
          .span9.big-text
            Survey Taker: 
          .span8
            #{@user.name}
          .clr
        %li.border-bottom-grayLighter.padding-all1
          .span9.big-text
            Email id:
          .span8
            #{ h @user.email}

          .clr
        %li.border-bottom-grayLighter.padding-all1
          .span9.big-text
            Contact no.:
          .span8
            #{ h @user.mobile, nil, :prefix => "+91-" }
          .clr
        %li.border-bottom-grayLighter.padding-all1
          .span9.big-text
            Industry:
          .span8
            #{ h(@user.industry.name) rescue 'Not available' }
          .clr          
        %li.border-bottom-grayLighter.padding-all1
          .span9.big-text
            Current Location:
          .span8
            #{ h(@user.location.name) rescue 'Not available' }
          .clr
        %li.border-bottom-grayLighter.padding-all1
          .span9.big-text
            Current Functional area:
          .span8
            #{ h(@user.functional_area.name) rescue 'Not available' }
          .clr          
        %li.border-bottom-grayLighter.padding-all1
          .span9.big-text
            Age:
          .span8
            #{ @user.birth_date.present? ? (Time.now.year - Date.parse(@user.birth_date).year) : "Not available" }
          .clr
        %li.border-bottom-grayLighter.padding-all1
          .span9.big-text
            Experience in Current Company:
          .span8
            #{ h(@user.current_company_experience, nil, :suffix => " Years") }
          .clr
        %li.border-bottom-grayLighter.padding-all1
          .span9.big-text
            Gender:
          .span8
            = @user.gender.present? ? raw(t "gender.#{@user.gender}") : "Not available"
          .clr
        %li.border-bottom-grayLighter.padding-all1
          .span9.big-text
            Total Work Experience:
          .span8
            #{ h(@user.total_experience, nil, :suffix => " Years")} 
          .clr
        %li.border-bottom-grayLighter.padding-all1
          .span9.big-text
            Current CTC:
          .span8
            #{ h(@user.current_ctc,nil, :suffix => " Lakhs") } 
          .clr
        -#
          %li.border-bottom-grayLighter.padding-all1
            .span9.big-text
              Marital Status:
            .span8
              = @user.marital_status.present? ? raw(t "marital_status.#{@user.marital_status}") : "Not available"
            .clr
        -#
          %li.border-bottom-grayLighter.padding-all1
            .span9.big-text
              Current Company Name:
            .span8
              #{ h @user.current_company }
            .clr
        -#
          %li.border-bottom-grayLighter.padding-all1
            .span9.big-text
              Degree with Specialization:
            .span8
              TODO
            .clr

        %li.border-bottom-grayLighter.padding-all1
          .span9.big-text
            Number of Dependants:
          .span8
            #{ h @user.no_of_dependents }
          .clr
        = render :partial => "users/factual_information"  
  .divider1
  .padding-all2.border-warning.shifted-up1.extra-medium-text
    .page-title
      Reports
    .divider2
    .list-snippet-titles.large-text.clearfix
      .span3.first
        %a{:href => "#", :title => "Sort by survey ID in ascending order"}
          AID
          %i.icon-chevron-down.small-text.line-height1
      .span5
        %a{:href => "#", :title => "Sort by Company Name in ascending order"}
          Company Name
          %i.icon-chevron-down.small-text.line-height1
      .span10
        %a{:href => "#", :title => "Sort by Survey Name in ascending order"}
          Survey Name
          %i.icon-chevron-down.small-text.line-height1
      .span5 
        %a{:href => "#", :title => "Sort by Survey Status in ascending order"}
          Survey Status
          %i.icon-chevron-down.small-text.line-height1 
    %ul
      - @user_surveys.each do |user_survey|
        - report = @reports[user_survey.id].to_a[0]
        %li.list-snippet
          .divider1
          .span3.first
            %a{:href=> company_exit_survey_path(:id => @survey.id, :company_id => @company.id), :title=>"SURVEY#{@survey.id}"} 
              #{@survey.id}
          .span5
            #{@company.name}
          .span10
            #{@survey.name}
          .span5
            - if report
              - if report.status == Vger::Resources::Exit::Report::Status::UPLOADED
                - url =  s3_report_company_exit_survey_path(:company_id => params[:company_id], :user_id => user_survey.user_id, :report_id => report.id, :view_mode => "html")
                %a{:href => url, :title => "View Report", target: "_blank"}
                  View Report
              - else
                %i.icon-spinner.icon-spin 
                Generating report...  
            - else 
              - if user_survey.status == Vger::Resources::Exit::UserSurvey::Status::EXPIRED
                Expired
              - else
                Pending
          .clr         
