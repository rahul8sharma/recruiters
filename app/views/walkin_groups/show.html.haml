.inn.first
  .page-title.pull-left
    = @walkin_group.title
.inn.gray-gradient
  .pull-left
    .content-sub-nav.clearfix
      %a.menu{:title => "Candidates", :href => company_walkin_group_path(@company, @walkin_group), :class => "active"}
        Summary
  .pull-right
    %span.span.medium-text.line-height2
      Page expires on:   
      %b #{ htime @walkin_group.expires_on } hrs
      %b 
        \|  
      %b #{ hdate @walkin_group.expires_on }
    %a.btn.btn-info.medium-text.span{:href => edit_company_walkin_group_path(@company, @walkin_group), :title => "Edit Walk-In List"}
      Edit
  .clr

  .divider1

  .index-page-link
    .span
      %b URL to access Index page:
    .span15
      %a{:href => @walkin_group.url, target: "_blank", :title => "URL to access Index page"}
        = @walkin_group.url
    .clr
  .divider1       
  .list-snippet-titles.clearfix
    .span3.first
      Test ID
    .span13
      Test Name
    .span3
      Tests Sent
    .span
      Tests Answered
  %ul.unstyled
    - @assessments.each do |assessment|
      - if @walkin_group.assessment_hash["#{assessment.id}"]["enabled"] == "true"
        %li.list-snippet
          .span3.first
            %a.default-color{:title => "", :href => company_assessment_path(@company, assessment)}
              Test #{assessment.id}
          .span13.lhs-border
            %a.default-color{:title => "", :href => company_assessment_path(@company, assessment)}
              #{assessment.name}
          .span3.lhs-border
            %a.default-color{:title => "", :href => company_assessment_path(@company, assessment)}
              = @company.assessmentwise_statistics[:sent][assessment.id.to_s] rescue 0
          .span.lhs-border
            %a.default-color{:title => "", :href => company_assessment_path(@company, assessment)}
              = @company.assessmentwise_statistics[:completed][assessment.id.to_s] rescue 0
  .pull-right
    %a.btn.btn-info.medium-text.span{:href => edit_company_walkin_group_path(@company, @walkin_group), :title => "Edit Walk-In List"}
      Edit
  .clr
