- content_for :jquery do
  = javascript_include_tag "jquery"
  = javascript_include_tag "jquery_ujs"
  = javascript_include_tag 'sign_up'
.sign-up
  .container
    .span19.first
      .divider1
      %strong.huge-text
        Sign Up for your Free Trial
      .divider1
      .large-text
        Get 5 Assessments for Free. No Obligation. No Credit Card required.
      .divider2
      .border-primary.border-radius3.padding-all2
        .span11.margin-auto
          = form_for(@company, as: :company, url: sign_up_path, method: :post, html: { class: "extra-medium-text" }) do |f|
            = f.fields_for :admin do |af|  
              .control-group
                = af.text_field :name, class: "fw", placeholder: "Full Name", required: true
              .control-group
                = af.text_field :email, placeholder: "Company Email", class: "fw pull-left", required: true
                .info-tooltip-control.pull-left
                  .info-tooltip.gray-darker
                    We encourage you to enter your company email address (not personal email address) for getting full access &amp; privileges
                    .left-caret
                .clr
              .control-group
                = af.password_field :password, placeholder: "Enter a password of your choice", class: "fw", required: true
              .control-group
                = af.text_field :mobile, placeholder: "Contact Number", class: "fw pull-left", required: true
                .info-tooltip-control.pull-left
                  .info-tooltip.gray-darker
                    Required to ensure that nobody misused your identity. Don't worry all information you provide is completely confidential
                    .left-caret
                .clr
            .control-group
              = f.text_field :name, title: "Sign to Jombay", placeholder: "Company Name", class: "fw", required: true
            .control-group
              = f.select :country, @countries.map(&:name), { prompt: "Country" }, { class: "fw divider2", required: true }
            %button.btn.btn-warning.large-text.fw
              Sign Up
            .divider2
            .medium-text
              By Clicking “Sign Up” above you agree to the 
              %a.underlined{:href => "http://products.jombay.com/terms-and-conditions/", :target=>"_blank", :title => "Jombay Terms and Conditions"}
                Terms and Conditions
        

    .span9.left-offset2
      .span4.text-center.pull-right.right-offset1.last
        .extra-medium-text.gray-dark.line-height2
          Already a user?
        %a.btn.btn-warning.inverse.large-text{:href => "/login", :title => "Sign to Jombay"}
          Sign In
      .clr
      .divider2
      .gray-darker
        .large-text
          5 reasons you will love Jombay
        .divider2
        %ol.extra-medium-text
          %li
            Library of Ready-to-Send Assessments 
            .divider1
          %li
            Create your own Custom Assessments
            .divider1
          %li
            Send Assessments in less than 60 seconds
            .divider1
          %li
            Intuitive Reports 
            .divider1
          %li
            24X7 Customer Support
            .divider1
        .divider2
        .large-text
          Some of our happy customers
        .divider2
        = image_tag ("customers.png")
    .clr
