.walk-ins-summary
  .page-title
    .divider1
      = @walkin_group.title
    .divider2
      
  .pull-left
    .navigation-sub-nav.clearfix.pull-left
      .menu
        .count 1 
        Create Page             
      .menu
        .count 2 
        Customize           
      .menu.active
        .count 3 
        Summary              
  .pull-right
    %span.span.medium-text.line-height2
      Page expires on:   
      %b #{ htime @walkin_group.expires_on } hrs
      %b 
        \|  
      %b #{ hdate @walkin_group.expires_on }
    
  .clr

  .divider1

  .index-page-link
    .span
      %b URL to access Index page:
    .span15
      %a{:href => @walkin_group.url, target: "_blank", :title => "URL to access Index page"}
        = @walkin_group.url
    .clr
  .divider2 

  .list-snippet-titles.large-text.clearfix
    .span3.first
      %a{:href=>"#"}
        AID
        %i.icon-chevron-down.small-text.line-height1
    .span12
      %a{:href=>"#"}
        Assessment Name
        %i.small-text.line-height1
    .span4
      %a{:href=>"#"}
        Send Report
        %i.small-text.line-height1
    .span4
      %a{:href=>"#"}
        Send Email/Sms
        %i.small-text.line-height1
    .span4
      %a{:href=>"#"}
        Candidate Type
        %i.small-text.line-height1                            
  .divider1
   
  %ul
    - @assessments.each do |assessment|
      - if @walkin_group.assessment_hash["#{assessment.id}"]["enabled"] == "true"
        %li.list-snippet.border-bottom-grayLighter
          .divider1
          .span3.first
            %a{:title => "", :href => "#"}
              =assessment.id
          .span12
            %a{:title => "", :href => "#"}
              = assessment.name
          .span4
            %a{:title => "Send Report to candidate", :href => "#"}
              = @walkin_group.assessment_hash[assessment.id.to_s]["send_report_to_candidate"] ? "Yes" : "No"
          .span4
            %a{:title => "Send Assessment Link Email or SMS", :href => "#"}
              = @walkin_group.assessment_hash[assessment.id.to_s]["send_assessment_link_email_or_sms"] ? "Yes" : "No"
          .span4
            %a{:title => "Candidate Type", :href => "#"}
              = @walkin_group.assessment_hash[assessment.id.to_s]["candidate_stage"]
          .clr
          .divider1
      
  .divider2
  %a.btn.btn-warning.big-text.pull-right{:href => company_mrf_walkin_group_path(@company.id,@walkin_group.id), :title => "Submit Final List"}
    Submit
  .clr
