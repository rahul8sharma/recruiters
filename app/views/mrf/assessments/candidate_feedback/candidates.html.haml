.candidate-mrf-show
  .span15.huge-text.first
    .divider1
    #{@assessment.id} - #{@assessment.name}
  %a.btn.btn-info.pull-right.big-text.big.bold{:href => new_company_mrf_assessment_path(@company.id)}
    Create a new 360&#176; Profiling Exercise
  .clr
  .divider2
  = render :partial => "shared/360/candidate-content-sub-nav"

  .padding-all2.border-warning.shifted-up1    
    .list-snippet-titles.big-text.clearfix
      - if @candidates.present?
        .span3.first
          %a{:href => "#", :title => "360 ID"}
            360&#176;CID
            %i.icon-chevron-down.small-text.line-height1
        .span10
          %a{:href => "#", :title => "Created On"}
            Candidates
            %i.icon-chevron-down.small-text.line-height1
        .span5
          %a{:href => "#", :title => "Profiling Exercises Title "}
            360&#176; Status
            %i.icon-chevron-down.small-text.line-height1
        .span5
          %a{:href => '#', :title => "Candidates"}
            Reports
            %i.icon-chevron-down.small-text.line-height1
        .span5
          Remind Stakeholders
        .clr
        .divider1          

        %ul
          - @candidates.each do |candidate|
            %li.list-snippet.extra-medium-text
              .divider1
              .span3.first
                %a{:href => candidate_statistics_company_mrf_assessment_path(@company.id,@assessment.id,candidate.id), :title => candidate.id}
                  = candidate.id
              .span10
                %a{:href => candidate_statistics_company_mrf_assessment_path(@company.id,@assessment.id,candidate.id), :title => candidate.id}
                  = candidate.name
              .span5
                = Vger::Resources::Mrf::Feedback.completed_statuses.include?(@feedbacks[candidate.id].last.status) ? "Completed" : "Partially Completed"
              .span5
                %a{:href => report_company_mrf_assessment_path(@company.id, @assessment.id, candidate.id), :title => "View Report", :target => '_blank'}
                  %i.icon-file
                  View Report
              .span5
                - if !Vger::Resources::Mrf::Feedback.completed_statuses.include?(@feedbacks[candidate.id].last.status)
                  %a{:href => send_reminder_company_mrf_assessment_path(@company.id, @assessment.id, :options => { candidate_id: candidate.id }), :title => "Send Reminders"}
                    Send Reminders
                - else
                  = "-"    
              .clr
      - else
        .alert.medium-text.text-center
          No candidates present
    .divider2
    .pull-right
      .muted.extra-medium-text
        .span.line-height2
          Go to Page
        %select.span2{onchange:"location = this.options[this.selectedIndex].value;"}
          - @candidates.total_pages.times do |page|
            %option{selected: params[:page].to_i == (page + 1),value: candidates_company_mrf_assessment_path(@company.id, @assessment.id, params.merge(:page => page + 1)), }
              = page + 1
        .clr
    .clr
