= render partial: "shared/360/compact_mrf_report_header"
.overall_report.compact.clearfix
  .divider2
  .span12
    .extra-large-text
      = @report.report_hash[:user][:name]
    .divider1
    .extra-medium-text.gray-darker
      .span7.first #{get_assessment_purpose(@report)}&#176; Values Assessment Exercise:
      .span5.first 
        = truncate @report.report_hash[:assessment][:name], :length => 30
      .clr
      Report Generated On:
      = hdate @report.report_hash[:generated_at]
  .heading.large-text.pull-right{ style: "width: 342px;" }
    #{get_assessment_purpose(@report)}&#176; Values Assessment Exercise Report
  .clr
  - section_value.each do |section|
    = render :partial => section["path"], :locals => { :section_value => section["children"] }


