.scores
  .divider2
  .blue_heading.large-text
    Data Points on 360&#176; Scores: Competencies
  .divider1
  .frame.mrf.gray-bg
    .heading.pull-left
      competency_name
    .heading.pull-right 
      360&#176; Score:
      100
    .clr 
    .divider1
    .small-padding
      .divider1
      .bold
        Frequency of Ratings
      .divider1
      %table.frequency_rating_table{:cellpadding=>"0", :cellspacing=> "0", width: "100%"}
        %tbody
          %tr.captions
            %td.mute_bg
            %td.dark_mute_bg{:colspan=>"7"}
              Rating

          %tr.captions.rating_ranges
            %td.mute_bg
