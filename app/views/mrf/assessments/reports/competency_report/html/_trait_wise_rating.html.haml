%li
  .left_sec
    .caption
      #{trait_score[:trait][:name]}
      .info
        Trait present under the competency &#34;#{competency_name}&#34;
      .arrow
    .divider2
    .content
      .trait_rating.max
        .left
          Maximum Rating
        .right
          = trait_score[:max_score_excluding_self][:bucket] ? trait_score[:max_score_excluding_self][:bucket] : 'Waiting For Responses'            
        .clr

      .trait_rating.min
        .left
          Minimum Rating
        .right
          = trait_score[:min_score_excluding_self][:bucket] ? trait_score[:min_score_excluding_self][:bucket] : 'Waiting For Responses'
        .clr

      .trait_rating.self
        .left
          Self Rating
        .right
          = trait_score[:average_score_self][:bucket] ? trait_score[:average_score_self][:bucket] : 'Waiting For Responses'
        .clr

      - if trait_score[:assessment_rating]
        .trait_rating.score
          .left
            Assessment Score
          .right
            = trait_score[:assessment_rating]
          .clr
      .divider1

      .overall_average
        %p.big-text
          Overall Average
        .divider1
        .snippet.including
          Including Self Rating: 
          = trait_score[:average_score_including_self][:bucket].present? ? trait_score[:average_score_including_self][:bucket] : "NA"
        .divider1
        .snippet.excluding
          Excluding Self Rating: 
          = trait_score[:average_score_excluding_self][:bucket].present? ? trait_score[:average_score_excluding_self][:bucket] : "NA"
        .divider1
  .right-sec.span17
    .divider2
    .caption.text-center
      Average Rating by Stakeholders
    .divider3
    - trait_score[:role_wise_scores].each do |role_wise_name, role_wise_score|
      .stakeholders-rating-snippet
        .stakeholders-name.pull-left
          = role_wise_name.titleize
        .stakeholders-rating-slider.pull-left{ class: "width#{@norm_buckets.size}" }
          .stakeholders-rating-markers 
            - klass = ''
            -@norm_buckets.each_with_index do |norm_bucket|
              - if norm_bucket.name == role_wise_score[:bucket]
                - klass = 'hide'
                .marker{:class => 'active'}
                  .arrow
                  .score
                    = norm_bucket.name
              - else
                .marker
                  .arrow
                  .score
                    = norm_bucket.name
            .clr
            .alert.alert-error{:class => "#{klass} width#{@norm_buckets.size}"}
              No Responses Yet
        .clr
        .divider3
  .clr
.divider1

