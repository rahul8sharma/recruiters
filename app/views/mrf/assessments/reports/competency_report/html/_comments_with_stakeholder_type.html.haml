%table{:cellspacing=>"15"}
  - trait[:comments].each_slice(2) do |step_rolewise|
    %tr.clearfix
      - step_rolewise.each do |role_name, role_wise_comment|
        - if role_wise_comment.any?{ |comment| comment[:comment].present? }
          %td
            .extra-medium-text
              = role_name.titleize
            .divider1
            .medium-text
              - role_wise_comment.each do |comment|
                = comment[:comment]

