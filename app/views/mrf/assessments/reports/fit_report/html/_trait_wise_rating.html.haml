%li
  .left_sec
    .caption
      = trait_score[:trait][:name]
    .divider2
    .content
      .trait_rating.max
        .left
          Maximum Rating
        .right
          = trait_score[:max_score_excluding_self][:bucket] ? trait_score[:max_score_excluding_self][:bucket] : 'Waiting For Responses'
        .clr

      .trait_rating.min
        .left
          Minimum Rating
        .right
          = trait_score[:min_score_excluding_self][:bucket] ? trait_score[:min_score_excluding_self][:bucket] : 'Waiting For Responses'
        .clr

      .trait_rating.self
        .left
          Self Rating
        .right
          = trait_score[:average_score_self][:bucket] ? trait_score[:average_score_self][:bucket] : 'Waiting For Responses'
        .clr

      - if trait_score[:assessment_rating]
        .trait_rating.score
          .left
            Assessment Score
          .right
            = trait_score[:assessment_rating] rescue "-"
          .clr
      .divider1

      .overall_average
        %p.big-text
          Overall Average
        .divider1
        .snippet.including
          Including Self Rating: 
          = trait_score[:average_score_self][:bucket]
        .divider1
        .snippet.excluding
          Excluding Self Rating: 
          = trait_score[:average_score_excluding_self][:bucket]
        .divider1
  .right-sec.span17
    .divider2
    .caption.text-center
      Average Rating by Stakeholders
    .divider3
    - trait_score[:role_wise_scores].each_with_index do |(role_name, role_wise_score), index|
      .stakeholders-rating-snippet
        .stakeholders-name.pull-left
          = role_name.titleize
        .stakeholders-rating-slider.pull-left 
          - klass = ''
          -@norm_buckets.each_with_index do |norm_bucket|
            - if norm_bucket.name == role_wise_score[:bucket]
              - klass = 'hide'
              .marker{:class => 'active'}
                .arrow
                .score
                  = norm_bucket.name
            - else
              .marker
                .arrow
                .score
                  = norm_bucket.name
          .clr
          .alert.alert-error{:class => klass}
            No Responses Yet
        .clr
        .divider3
  .clr
.divider1

