%ul.mrf_data_points_listing
  %li
    .divider2

    .left_sec
      .caption
        Average Rating across all Traits
      .divider1
      .content
        .trait_rating.max
          .left
            Maximum Rating
          .right
            = @report.report_data[:max_score_excluding_self][:bucket]
          .clr

        .trait_rating.min
          .left
            Minimum Rating
          .right
            = @report.report_data[:min_score_excluding_self][:bucket]
          .clr

        .trait_rating.self
          .left
            Self Rating
          .right
            = @report.report_data[:average_score_self][:bucket]
          .clr

        .trait_rating.score
          .left
            Assessment Score
          .right
            = @report.report_data[:assessment_rating]
          .clr

        .divider1

        .overall_average
          %p
            Overall Average
          .snippet.including
            Including Self Rating: 
            = @report.report_data[:average_score_including_self][:bucket]
          .snippet.excluding
            Excluding Self Rating:
            = @report.report_data[:average_score_excluding_self][:bucket]

    .right-sec.span12
      .caption.text-center
        Average Rating by Stakeholders across all Traits
      .divider3
      - role_wise_scores.each do |role_name, role_wise_score|
        .stakeholders-rating-snippet
          .stakeholders-name.pull-left
            = role_name.titleize
          .stakeholders-rating-slider.pull-left 
            - klass = ''
            -@norm_buckets.each_with_index do |norm_bucket|
              - if norm_bucket.name == role_wise_score[:bucket]
                - klass = 'hide'
                .marker{:class => 'active'}
                  .arrow
                  .score
                    = norm_bucket.name
              - else
                .marker
                  .arrow
                  .score
                    = norm_bucket.name
            .clr
            .alert.alert-error{:class => klass}
              No Responses Yet
          .clr
          .divider3

    .clr
    .divider2

