= form_for :user, url: export_user_reports_users_path, multipart: true, :method => :post do |f|
  %input{ type: "hidden", name: "user[job_klass]", value: "Suitability::UserReportsExporter" }
  %fieldset
    %legend 
      %strong Download Candidate Reports
    = f.fields_for "args" do |f|
      = f.hidden_field :user_id, value: current_user.id
      %p
        Assessment ID : 
        = f.text_field :assessment_id
        
      %p
        Notification Email : 
        = f.text_field :email, :value => "product@jombay.com"

  .actions
    = submit_tag 'Download'
