= form_tag export_candidates_path, multipart: true, :method => :post do
  %fieldset
    %legend 
      %strong Download candidates
    = fields_for "export" do |f|
      %p
        Assessment ID : 
        = f.text_field :assessment_id
        
      = f.fields_for "folder" do |f|
        %p
          Google Drive Folder Url : 
          = f.text_field "url"

      %p
        Rows per sheet: 
        = f.text_field "rows_per_sheet", :value => "10000"

      %p
        Notification Email : 
        = f.text_field :email, :value => "notifications@jombay.com"

    .actions
      = submit_tag 'Download Candidates'
