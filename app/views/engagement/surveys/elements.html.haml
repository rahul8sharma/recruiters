.trait-show.mrf
  .span18.huge-text.first
    .divider1
    #{@survey.id} - #{@survey.name}
  %a.btn.btn-info.pull-right.big-text.big.bold{:href => new_company_engagement_survey_path(@company)}
    Create a new Engagement Survey
  .clr
  .divider2
  = render :partial => "shared/engagement/survey-sub-nav"
  .padding-all2.border-warning.shifted-up1
    - if (@survey.survey_elements.present?)
      .big-text.font-bold
        .pull-left
          Elements Measured: #{@survey.survey_elements.size}
        .clr
      .divider1
      %ul.clearfix.scores_listing.first
        - @survey.survey_elements.each do |survey_element|
          %li
            = survey_element.element.name
      .divider2

