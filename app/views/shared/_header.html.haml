#header
  .container
    .logo.pull-left
      = link_to(image_tag("jombay-logo.png"), "/")
    - if defined?(@company)  
      .span12.company_name
        = @company.name  
    .span14.pull-right
      %ul.navbar.pull-left.clearfix
        %li
          %a{:href=>"#", :title=> "HOME"}
            HOME
        - if defined?(@company)
          - if current_user.type == "SuperAdmin"
            %li
              %a{:href=>companies_path(), :title=> "COMPANIES"}
                COMPANIES
          %li
            %a{:href=>company_assessments_path(@company), :title=> "ASSESSMENTS"}
              ASSESSMENTS
          %li
            %a{:href=>"#", :title=> "REPORTS"}
              REPORTS

          - else
            %li
              %a{:href=>companies_path(), :title=> "COMPANIES"}
                COMPANIES

        %li
          %a{:href=>"#", :title=> "HELP"}
            HELP
      %a.label.label-warning.label-small.pull-left{:href=>"#", :title=> "UPGRADE ACCOUNT"}
        UPGRADE ACCOUNT
      %ul#sub-nav.pull-left
        %li
          %a.setting{href: "#", title: "Account"} 
            
          %ul
            - if defined?(@company)
              %li
                %a{:href=>statistics_company_path(@company)} Usage
              %li
                %a{:href=>company_path(@company)} Settings
              %li
                %a{href: "#"} Traning Requirements
              %li
                %a{href: "#"} Walk-Ins
              %li
                %a{href: "#"} Benchmarks
            %li
              %a{href: "/logout"} Logout
      .clr
    .clr

      
