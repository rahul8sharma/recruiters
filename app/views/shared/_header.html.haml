#header
  .container
    .logo.pull-left
      = link_to(image_tag("jombay-logo.png"), "/")
    .span9.company_name
      = @company.name  
    .span10.navbar.pull-right
      .navigations.clearfix
        - if current_user  
          %a.userName.logout.pull-right{:href => logout_path, :title => "Logout"}
            Logout
          .userName.pull-right
            %b #{h current_user.name, "-"} 
            \| 
            #{current_user.type} 
            / %span.icon-caret-down
        - else
          %a.userName.logout.pull-right{:href => login_path, :title => "Login"}
            Login
        - if current_user.type == "SuperAdmin"
          %a.userName.pull-right{:href => companies_path, :title => "Companies" }
            Companies
            / %span.icon-caret-down
    .clr
