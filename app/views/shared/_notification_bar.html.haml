- if content_for? :alert
  .divider1
  .container
    = yield :alert
- if flash[:notice].present?
  .divider1
  .container
    %div{ class: "alert alert-success" }
      %strong
        = flash[:notice].to_s.html_safe
  - if flash[:error].present?
    %div{ class: "alert alert-error" }
      %strong
        = flash[:error].to_s.html_safe    
  - if flash[:alert].present?    
    %div{ class: "alert" }
      %strong
        = flash[:alert].to_s.html_safe        
- flash.clear        
