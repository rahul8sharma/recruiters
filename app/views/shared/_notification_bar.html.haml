.container
  - if flash[:notice].present?
    %div{ class: "alert alert-success" }
      %strong
        = flash[:notice]
  - if flash[:error].present?
    %div{ class: "alert alert-error" }
      %strong
        = flash[:error]    
  - if flash[:alert].present?    
    %div{ class: "alert" }
      %strong
        = flash[:alert]        
- flash.clear        
