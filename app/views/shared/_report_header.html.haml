- if @view_mode != "html"
  .header.clearfix
    .logo
      - if @view_mode == "html"
        = image_tag ('report/jombay-logo-icon.png')
      - else
        = wicked_pdf_image_tag ('report/jombay-logo-icon.png')
    .left-side
      .user_name
        = @candidate.name
      .date
        Assessment Date: #{Date.parse(@candidate_assessment.updated_at).strftime("%d/%m/%Y")}
    .right-side
      .pull-left
        Assessment Name: 
      .pull-left.span
        = @assessment.name
      .clr

