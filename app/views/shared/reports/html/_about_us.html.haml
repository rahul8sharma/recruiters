          .content.company-summary
            .company-badge
              - brand_partner_image_path = asset_path("#{@report.report_hash[:assessment][:brand_partner].underscore}.png")
              %img{:src => brand_partner_image_path}
            .divider2
            %p
              = Rails.application.config.brand_partners[@report.report_hash[:assessment][:brand_partner].underscore][:description].html_safe
