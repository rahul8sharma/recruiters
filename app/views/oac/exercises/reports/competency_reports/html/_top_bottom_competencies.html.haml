- top_competencies = get_top_competencies(@report)
- bottom_competencies = get_top_competencies(@report)
.top_bottom_competencies
  .container
    .divider2
    .title
      Top 2 and Bottom 2 Competencies 
    .divider2
    .caption.top.span15.first
      Top 2 Super Competencies
    .caption.bottom.span15.first
      Bottom 2 Super Competencies
    .clr
    %table
      -2.times do |index|
        %tr
          %td{ style: "width: 50%" }
            - competency = top_competencies[index]
            - if competency
              .legend
                = top_competencies[index][1][:name]
              = @report.report_data[:super_competency_configuration][:overall_configuration][top_competencies[index][0]][:definition]
            - else
              .muted
                Not available
          %td.space 
          %td{ style: "width: 50%" }
            - competency = bottom_competencies[index]
            - if competency
              .legend
                = bottom_competencies[index][1][:name]
              = @report.report_data[:super_competency_configuration][:overall_configuration][bottom_competencies[index][0]][:definition]
            - else
              .muted
                Not available
  .divider1
