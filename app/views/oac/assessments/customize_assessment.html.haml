.container
  .page-title
    Customize Assessment
  .divider1
  = render :partial => "shared/oac/oac-creation-sub-nav"
  - url = customize_assessment_company_oac_exercise_path(@company.id, @exercise.id)
  = form_for @exercise, as: :exercise, url: url, html: { method: :put } do |f|
    .span22.margin-auto.clearfix
      %ul
        - @exercise_tools.each_with_index do |exercise_tool, index|
          - if exercise_tool.id.present?
            %input{ :type => "hidden", :name=>"exercise[exercise_tools_attributes][#{index}][id]", value: exercise_tool.id }
          %li.span7
            .span6
              .control-group
                .span4.big-text.black.first
                  = exercise_tool.tool.name
                %input.span2.first{ :type => "text", :name=>"exercise[exercise_tools_attributes][#{index}][custom_configuration][tool_weightage]", :placeholder=>"Weightage %", value: exercise_tool.tool_weightage }
              %select.fw{ name: "exercise[exercise_tools_attributes][#{index}][custom_configuration][industry_id]" }
                %option{ value: "" }
                  Select Industry
                - @industries.each do |industry_id, industry|
                  %option{ value: industry.id, selected: exercise_tool.custom_configuration[:industry_id].to_i == industry.id }
                    = industry.name
              .divider1
              %select.fw{ name: "exercise[exercise_tools_attributes][#{index}][custom_configuration][functional_area_id]" }
                %option{ value: "" }
                  Select Function
                - @functional_areas.each do |functional_area_id, functional_area|
                  %option{ value: functional_area.id, selected: exercise_tool.custom_configuration[:functional_area_id].to_i == functional_area.id }
                    = functional_area.name  
              .divider1
              %select.fw{ name: "exercise[exercise_tools_attributes][#{index}][custom_configuration][job_experience_id]" }
                %option{ value: "" }
                  Select Experience
                - @job_experiences.each do |job_experience_id, job_experience|
                  %option{ value: job_experience.id, selected: exercise_tool.custom_configuration[:job_experience_id].to_i == job_experience.id }
                    = job_experience.display_text
              .divider1
              %input.fw{:type=>"text", :placeholder=>"Page Size", name: "exercise[exercise_tools_attributes][#{index}][custom_configuration][page_size]", value: exercise_tool.page_size }
          - if (index+1) % 2 == 0
            .clr.divider3
      .divider2
      %input.pull-right.btn.btn-info.big-text.big.font-bold{ type: "submit",  value: "Proceed"}
