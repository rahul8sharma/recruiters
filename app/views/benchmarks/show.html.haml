- content_for :jquery do
  = javascript_include_tag "jquery"
  = javascript_include_tag "jquery_ujs"

.create-test.creat-test-show.benchmarks
  .inn.first
    .page-title.pull-left
      Benchmark #{@assessment.id} - #{@assessment.name}
    %a.btn.pull-right{ href: add_candidates_company_benchmark_path(:company_id => params[:company_id], :id => params[:id]) }
      .link-color Send This Benchmark
  .clr
  .inn.gray-gradient
    .pull-left
      = render :partial => "shared/candidate-content-benchmark-sub-nav"
    - if @assessment.report_urls && @assessment.report_urls["benchmark"] && @assessment.report_urls["benchmark"]["pdf"]
      .pull-right
        = link_to "Download a PDF version of the Benchmark Report", report_company_benchmark_path(:id => params[:id],:company_id => params[:company_id], format: "pdf"), target: "_blank", class: "line-height2 span"
    / .sapn6.pull-right.text-right
    /   %a.line-height2{:href => company_assessments_path(@company)}
    /     Back to all Benchmarks

    //%a.btn.btn-info.pull-right{:href => norms_company_assessment_path(:company_id => params[:company_id], :id => params[:id]), :title => "Edit Test"}
    //  Edit Test
    .clr
    .divider2
    .summary.padding-all1.clearfix
      .span
        %b.show.pull-left 
          Industry: 
        .span6
          = @assessment.industry.name rescue '-'
      .span
        %b.show.pull-left 
          Functional Area: 
        .span6
          = @assessment.functional_area.name rescue '-'
      .span
        %b.show.span
          Experience Level: 
        .span 
          = @assessment.job_experience.display_text rescue '-'
    .divider1
    .pull-left.medium-text
      Results last updated: #{htime @assessment.updated_at} Hrs, #{hdate @assessment.updated_at}
    .pull-right.text-right
      %b.medium-text Benchmarks Sent: 
      %b.large-text #{@company.assessmentwise_statistics[:sent][@assessment.id.to_s] rescue 0}
      %span.left-offset1
        %b.medium-text Benchmarks Taken: 
        %b.large-text #{@company.assessmentwise_statistics[:completed][@assessment.id.to_s] rescue 0}
    .clr.divider1
    .medium-text 
      %b Selected Factors
    .divider1
    %div
      
      %ul.unstyled.selected-factors
        - @assessment.benchmark_report[:factor_benchmarks].each_pair do |factor_name, factor_scores|
          %li.clearfix
            .pull-left.span9.first
              .selected-factors-title.clearfix
                = factor_name
              .description
                = factor_scores[:factor_definition]
            .pull-right
              = render :partial=> "benchmarks/report/factor_benchkmark", :locals=>{:benchmarks=>factor_scores}
            / .pull-left      
            /   %div{ id: "benchmark-chart-#{factor_name.underscore}", style: "width: 520px; height: 300px; overflow: hidden;", "class" => "benchmark-chart", "data-factor-name" => factor_name.underscore, "data-score-percentages" => factor_scores[:scores].to_json }
            / .clr  
            .clr.divider1
    .divider1
