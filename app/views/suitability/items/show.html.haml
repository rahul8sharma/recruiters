%h3 Item #{@item.id}
%p
  %b Item: 
  = @item.body
  %br
  %b Behavior: 
  = @item.behaviour
  %br
  %b Active: 
  = @item.active
%br
= link_to "Edit", edit_suitability_item_path(params[:id])
\|
= link_to "Back", suitability_factor_path(@item.factor_id)
%br
%br
%div
  %h3
    Options added for this item
    %br
%table
  %tr
    %th
      ID
    %th
      Body
    %th
  - Vger::Resources::Suitability::Option.where(:query_options => { :item_id => @item.id }).all.each do |option|
    %tr 
      %td
        = link_to option.id, suitability_item_option_path(params[:id], option.id)
      %td
        = link_to option.body, suitability_item_option_path(params[:id], option.id)
      %td
        = link_to "Edit", edit_suitability_item_option_path(params[:id], option.id)  
