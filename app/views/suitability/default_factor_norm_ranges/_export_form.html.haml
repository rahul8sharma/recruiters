= form_tag export_to_google_drive_suitability_default_factor_norm_ranges_path, multipart: true, :method => :post do
  %fieldset
    %legend 
      %strong Download default factor norm ranges
    = fields_for "export" do |f|
      = f.fields_for "folder" do |f|
        %p
          Google Drive Folder Url : 
          = f.text_field "url"
          
      %p
        Functional Area :
        %select{ name: "export[filters][functional_area_id][]", multiple: true, size: 10 }    
          - @functional_areas.each do |id,name|
            %option{ value: id }
              = name
        Industry :
        %select{ name: "export[filters][industry_id][]", multiple: true, size: 10 }    
          - @industries.each do |id,name|
            %option{ value: id }
              = name      
        Job Experiences :
        %select{ name: "export[filters][job_experience_id][]", multiple: true, size: 10 }    
          - @job_experiences.each do |id,name|
            %option{ value: id }
              = name          

      %p
        Notification Email : 
        = f.text_field :email, :value => "product@jombay.com"
    .actions
      = submit_tag 'Download Default factor norm ranges'

