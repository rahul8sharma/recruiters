- content_for :jquery do
  = javascript_include_tag "jquery"
  = javascript_include_tag "jquery_ujs"

.create-test.norms
  .inn.first
    .page-title 
      %b Benchmark Title: 
      #{@assessment.name}
  .inn.gray-gradient
    = render :partial => "shared/benchmark-flow-sub-nav"
    .divider1
    .description-section.medium-text.clearfix
      .span.first
        %b Industry:  
      .span4
        #{@assessment.industry.name rescue '-'}
      .span.left-offset1
        %b Functional Area: 
      .span4
        #{@assessment.functional_area.name rescue '-'}
      .span.left-offset1
        %b Experience: 
      .span4
        #{@assessment.job_experience.display_text rescue '-'}
    .clr
      
    = form_for @assessment, :as => :assessment, :url => norms_company_benchmark_path(:company_id => params[:company_id], :id => params[:id]), multipart: true, method: :put do |f|
      %input{type: 'hidden', name: 'assessment[industry_id]', value: @assessment.industry_id}
      %input{type: 'hidden', name: 'assessment[functional_area_id]', value: @assessment.functional_area_id}
      %input{type: 'hidden', name: 'assessment[job_experience_id]', value: @assessment.job_experience_id}
      .action
        .pull-left
          %b{ :style => "font-size:14px;" } Please select the behavioral factors that you would like to benchmark your Top Performers against:
        %button.pull-right.btn.btn-info
          Proceed
        .clr
      .factors
        - aindex = 0
        - @factor_norms_by_fit.each_with_index do |(fit,norms),fit_index|
          .titles.clearfix
            .span4.first
              Factors for #{fit.name}
            .span11
              %input{:type=>"checkbox", id: "check_all_fit#{fit_index}"}
              %label{ for: "check_all_fit#{fit_index}" }
                Select All  
            .pull-left
              .span7.first
              //  Desired/Acceptable Score Range 
              //.span2
              //  Critical
          .divider1
          %ul.unstyled.factor-snippet
            - norms[:factors].each_with_index do |assessment_factor_norm,index|
              - aindex = aindex + 1
              = render :partial => 'assessment_factor_norm_fields', :locals => { :assessment_factor_norm => assessment_factor_norm, :index => aindex, fit_index: fit_index }
            - norms[:alarm_factors].each_with_index do |assessment_factor_norm,index|
              - aindex = aindex + 1
              = render :partial => 'assessment_alarm_factor_norm_fields', :locals => { :assessment_factor_norm => assessment_factor_norm, :index => aindex, fit_index: fit_index }    
      .divider2
      %button.pull-right.btn.btn-info
        Proceed
      .clr
      .divider1

= javascript_include_tag 'norms'
