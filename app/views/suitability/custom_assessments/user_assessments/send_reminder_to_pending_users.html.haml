.send-reminder
  .page-title
    .divider1
    Send Reminder to all pending
  .divider3
  - url = send_reminder_to_pending_users_url
  = form_for @assessment, :as => :assessment, :url => url, method: :put, html: { class: "create-test-form" } do |f|
    .span8.left-offset1{:class => @templates.size <= 1 ? 'hide':''}
      .big-text.line-height2
        Choose Email Template
      %select{ id: "select_template", name: "template_id", onchange: "selectTemplate()" }
        -# add this class when template isnt availble "hide" to %select
        - @templates.each do |template|
          %option{value: template.id, body: template.preview(:body), subject: template.preview(:subject), from: template.preview(:from)}
            = template.name
    .email-template.pull-left{ class: (@templates.size <= 1 ? 'span18 margin-auto no-border':'') }
      -# add this classes when template isnt availble "span18 margin-auto no-border" to .email-template
      .gray-dark
        .span17
          .large-text
            Following is the Preview of the email that Assessment takers will receive.
          .divider1
          - template = @templates[0]
          .custom-email
            .test-text-to-send
              %span.extra-medium-text.span2.first.show
                From
              .massage-body.italic.span15.medium-text.email-from
                - if template && template.from
                  = template.preview(:from).html_safe
                - else
                  = "<Sender Name> at #{@company.name}"
              .clr
              .divider1
              %span.extra-medium-text.span2.first.show
                Subject
              .massage-body.italic.span15.medium-text.email-subject
                - if template && template.subject
                  = template.preview(:subject).html_safe
                - else
                  = "<Assessment Taker's Name>, #{@company.name} has chosen you to write an Assessment"
              .clr
              .divider1
              %span.extra-medium-text.span2.first.show
                Message
              .massage-body.italic.span15.medium-text.email-body
                - if template
                  = template.preview(:body).html_safe
                - else
                  - if params[:candidate_stage] == Vger::Resources::User::Stage::CANDIDATE
                    = render :partial => "suitability/custom_assessments/user_assessments/reminder_mail_body_for_user"
                  - else
                    = render :partial => "suitability/custom_assessments/user_assessments/reminder_mail_body_for_employee"
            .clr
            .divider2
            = f.submit "Send", class: "btn btn-warning large-text", :confirm => "Are YOU Sure?"
            %a.pull-right.line-height3{:href=> request.env["HTTP_REFERER"], :title => "cancel"}
              Cancel
            .clr
    .clr

= javascript_include_tag 'jquery'
= javascript_include_tag 'jquery_ujs'
= javascript_include_tag 'add_users'
