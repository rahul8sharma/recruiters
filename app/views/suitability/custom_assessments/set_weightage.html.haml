.weightage
  .page-title
    #{@assessment.name}
  
  .divider1
  = render :partial => "shared/navigation-sub-nav"
  .divider2
  = form_for @assessment, :as => :assessment, :url => set_weightage_company_custom_assessment_path(:company_id => params[:company_id], :id => params[:id]), multipart: true, method: :put do |f|
    .trait-list
      = render :partial => "#{@assessment.assessment_type}_weightages"
    %input.pull-left.btn.btn-warning.large-text.bold{:type => "submit", name: "save_and_close", :value => "Save and Close"}
    %input.pull-right.btn.btn-warning.large-text.right-offset1.bold{:type => "submit", name: "proceed", :value => "Proceed"}
    .clr
