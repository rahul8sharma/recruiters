- content_for :stylesheets do
  = wicked_pdf_stylesheet_link_tag "reports"
  = wicked_pdf_stylesheet_link_tag "toolkit/main-layout"

- content_for :body do 
  .report
    .inner
      .header.clearfix
        .logo
          = wicked_pdf_image_tag('report/jombay-logo.png')
        .right_side.pull-right
          .user_name
            #{@candidate.name}
          .date
            Test Date: #{Date.parse(@candidate_assessment.updated_at).strftime("%d/%m/%Y")}
      = yield 

= render :file => 'layouts/haml.html.haml'
