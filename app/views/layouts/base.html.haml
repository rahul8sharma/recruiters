- content_for :stylesheets do
  = stylesheet_link_tag "toolkit/main-layout"
  = stylesheet_link_tag "shared"

- content_for :body do
  .wrapper
    - if content_for?(:main_header)
      = yield (:main_header)
    - else
      = render :partial => "shared/header"

    - if content_for?(:notification_bar)
      = yield (:notification_bar)
    - else
      = render :partial => "shared/notification_bar"
    
    - if content_for?(:content)
      = yield(:content)
    - else
      = yield
    .divider6
    - if content_for?(:footer)
      = yield (:footer)
    - else
      = render :partial => "shared/footer"
  = javascript_include_tag "lead_squared.js"
  = javascript_include_tag "http://web.mxradon.com/t/Tracker.js"
= render :file => 'layouts/haml'
