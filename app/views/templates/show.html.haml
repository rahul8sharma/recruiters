%h2
  Showing details of #{resource_name.singularize.titleize} - #{@resource.id}
%table{ cellspacing: 5, cellpadding: 5 }
  %tr
    %td 
      %h4 Name:
    %td #{@resource.name}
  %tr
    %td 
      %h4 Category:
    %td #{@resource.template_category_id}  
  %tr
    %td 
      %h4 From:
    %td #{@resource.preview(:from, true).html_safe}  
  %tr
    %td 
      %h4 Subject:
    %td #{@resource.preview(:subject, true).html_safe}
  %tr
    %td
      %h4 Preview:
    %td 
      %i #{@resource.preview(:body, true).html_safe}
        
.links
  = link_to "Edit", send("edit_#{resource_name.singularize}_path",@resource)
  \|
  = link_to "Back", send("#{resource_name}_path")
