= form_tag controller.import_from_google_drive_path, multipart: true, :method => :post do
  %fieldset
    %legend 
      %strong Upload new #{controller.resource_name.humanize}
    = fields_for "import" do |f|
      = f.fields_for "file" do |f|
        %p
          Google Spreadsheet Url : 
          = f.text_field "url"
        %p
          Worksheet Names(separated by comma,keep empty to import all)
          = f.text_field "worksheets", :value => ''
      = f.hidden_field :email, :value => current_user.email

    .actions
      = submit_tag "Upload #{controller.resource_name.humanize}"
