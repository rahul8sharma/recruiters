%h3 Item #{@item.id}
%p
  %span.bold Body: 
  = @item.body
  %br
= link_to "Edit", edit_sq_item_path(params[:id])
\| 
= link_to "Back", sq_items_path()


%br
%br
%div
  %h3
    Options added for this item
    %br
%table
  %tr
    %th
      ID
    %th
      Body
    %th
      Order 
  - @item.options.each do |option|
    %tr 
      %td
        = option.id
      %td
        = option.body
      %td
        = option.option_order
