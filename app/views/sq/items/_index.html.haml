%table
  %tr
    %th Id
    %th Body
    %th Image
    %th Edit
  - items.each do |item|
    %tr 
      %td{ width: "5%" }
        = link_to item.id, sq_item_path(item.id)
      %td{ width: "30%" }
        = link_to item.body, sq_item_path(item.id)
      %td{ width: "20%" }
        = image_tag "data:image/jpeg;base64,#{item.image}"
      %td{ width: "20%" }
        = link_to "Edit", edit_sq_item_path(item.id)    

