#trait-score
  .container
    .divider2
    .title.pull-left
      Top Training Needs
    .pull-left
      .score-indicator
        .indicator.less-favorable
          Candidates with Less Favorable scores
        .indicator.favorable
          Candidates with Favorable scores
        .clr
    .clr
    .divider3
  

  %ul.training-need-list
    - @report_data[:factor_scores].keys.each_slice(5) do |factor_names|
      - factor_scores = @report_data[:factor_scores].slice(*factor_names)
      %li
        .container
          - factor_scores.each_with_index do |(factor_name,factor_score), index|
            .snippet
              .trait-title
                = factor_name
              .divider1
              .pie-visual
                %canvas{:id =>"pie_section1_#{index}", :width => "130", :height => "130","data-plot" => factor_score[:percentage_candidates]}
              .divider1
              .score
                #{factor_score[:percentage_candidates]}% Less Favourble
          .clr