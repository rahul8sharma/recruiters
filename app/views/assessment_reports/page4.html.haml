.inner
  = render :partial => "shared/report_header.html.haml"      

  .factor_fit.report_content
    .blue_bg_heading.iconic.pull-left
      Factors measured under 
      %b Team Fit
      .thumbnails
        .thumbnails_inn2
    .clr
    .instruction1
      Favorable 
    .instruction2
      Less Favorable 
    .factors_container
      .factors_list
        - @factors_by_fit[@team_fit].select{|factor| @measured_factors_ids.include?(factor.id) }.each_with_index do |factor,index|
          %div{ class: "factor_#{index+1} #{@candidate_factor_scores[factor.id].pass? ? 'favorable' : 'less_favorable'}" }
            .wrapper{:style=>"margin-top: 25px;"}
              = factor.name
      .bottom_sec
        .title_1
          Team Fit
        .strength_1
          = @team_fit_grade
        .title_2
          Job Role Fit
        .strength_2
          = @job_fit_grade
        .title_3
          Company Fit
        .strength_3
          = @company_fit_grade
        .indication
          Empty Hexagons represent behavioural factors that are not included in the scope of this Assessment
