.inner
  .overall_report
    .logo.pull-right
    .clr
    .heading
      .big-text
        = @report.report_hash[:candidate_stage].to_sym == :candidate ? "Suitability" : "Employee"
        Assessment Report
      .user_name
        = @report.report_hash[:candidate][:name]
      .span.first
        Assessment: 
      .span7
        = @report.report_hash[:assessment][:name]
      .clr
      .date
        %span Date: 
        %span
          = @report.report_hash[:completed_at]
      .clr

    - if @report.report_hash[:candidate_stage].to_sym == :candidate
      .sub-heading.large-text.pull-right
        Jombay&#39;s Recommendation : #{@report.report_hash[:recommendation]} 
      .clr
    .sub-heading.medium-text.pull-right
      #{@report.report_hash[:candidate][:name]}&#39;s Fitment Scores
    .clr
    .visual
      .strength_1
        = @report.report_hash[:company_fit_grade]
      .strength_2
        = @report.report_hash[:job_fit_grade]
      .strength_3
        = @report.report_hash[:team_fit_grade]
        
      .title_1
        Company Fit
      .title_2
        Job Role Fit
      .title_3
        Team Fit
