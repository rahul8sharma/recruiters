- competency_step = Rails.application.config.reports[@view_mode]["competency_step"]
- competency_scores = @report.report_hash[:competency_scores].map{|key,value| [key,value] }
- (0..competency_scores.length-1).step(competency_step) do |step|
  - step_competency_scores = Hash[competency_scores[step..(step+(competency_step - 1))]]
  = render partial: "shared/reports/pdf/report_header"
  #traits.section02
    .divider1
    .scores
      .blue_heading.large-text.pull-left
        Competencies / Values Measured
      .instruction_container.pull-left
        .instructions
          .instruction1.pull-left
            Favorable Traits
          .instruction2.less_favorable.pull-left
            Less Favorable Traits
          .clr
      .clr
      - if @report.report_data[:show_favourable_above_desired_range]
        - step_competency_scores.each do |competency_name,competency_data|
          = render :partial => "assessment_reports/competency_report/pdf/custom_factor_block", locals: { competency_name: competency_name, competency_data: competency_data }
      - else
        - step_competency_scores.each do |competency_name,competency_data|
          = render :partial => "assessment_reports/competency_report/pdf/generic_factor_block", locals: { competency_name: competency_name, competency_data: competency_data }
  .page-break
.page-break