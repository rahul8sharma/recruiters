#overview.section01
  .overall_report.container
    .divider6
    .user-name.pull-left
      = @report.report_hash[:candidate][:name]
    
    - if (@report.report_hash[:enable_aggregate_competency_score])
      .final-score.pull-right
        Aggregate Score:
        = @report.report_hash[:aggregate_competency_score_bucket][:name]
    .clr

    .divider3
    .extra-medium-text
      Assessment:
      = @report.report_hash[:assessment][:name]
      .divider1
      Assessment Answered On:
      = @report.report_hash[:completed_at]
    .divider2
.overview
  .top-triangle
    .bottom-triangle
      .container
        .divider1
        .content
          .overview-title
            Overview of Competencies / Values Measured
          %ul.competency-list.pull-left
            - competency_scores.each do |competency_name, competency_score|
              %li
                .competency-name.pull-left
                  = competency_name
                .competency-value.pull-right
                  = competency_score[:grade]
                .clr
          .clr
        .divider2
