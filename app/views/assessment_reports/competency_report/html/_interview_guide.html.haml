- if @report.report_hash[:interview_guide].present?
  #developement_guide.developement_guide.section_end_line
    .divider2
    .scores.container.interview_guide
      .title.pull-left.left-offset1
        Interview Questions
      .instruction_container.pull-right
        .instructions
          .instruction1.pull-left
            Favorable
          .instruction2.pull-left
            Less Favorable
          .clr
      .clr
      .divider1
      %ul.clearfix.scores_listing.interview_guide_listing
        - ordered_guides = get_ordered_guidelines(@report.report_hash[:interview_guide])
        - ordered_guides.each do |factor_name, guide|
          - klass = guide[:pass] ? "favorable" : "less_favorable"
          %li
            .span1.first.hexagon-icon{ class: klass }
            .factor-name.span4
              = factor_name
            .factor-description.span22.left-offset1
              = guide[:body]
            .clr
      .divider2
