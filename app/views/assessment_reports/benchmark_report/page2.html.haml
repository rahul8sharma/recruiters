.benchmark_report
  .inner{ style: "margin-top:0px;" }
    .overall_report
      .blue_bg_heading Score distribution for each factor (%)
      - factor_benchmarks.each do |factor_name, benchmarks|
        .graph_section.clearfix
          .pull-left
            .factor_title
              = factor_name
            %p.factor_description
              = benchmarks[:factor_definition]
          .bargraph.pull-right
            %ul.bars.clearfix
              - @norm_buckets.each_with_index do |norm_bucket,index|
                %li{ class: "bar#{index+1}", style: "height: #{benchmarks[:scores][norm_bucket.name][:score]}%;background: #{benchmarks[:scores][norm_bucket.name][:color]}"}
            %ul.label
              - @norm_buckets.each_with_index do |norm_bucket,index|
                %li #{norm_bucket.name}
            %ul.y-axis
              %li 100%
              %li 80%
              %li 60%
              %li 40%
              %li 20%
              %li 0%
              %li.units

            .graph_title
              Score distribution for each factor (%)
      .notification
        Factor scores are measured relative to Industry standards for this job role and experience level
        %span.star *
              
