%ul.clearfix.scores_listing.first
  - step_factor_scores.each_with_index do |(factor_name,factor_score),index|
    - scale_values = get_scale_calculations(factor_score, @company_norm_buckets, 34)
    %li{:id => "#{factor_name}"}
      .lhs-sec.pull-left{:style=>"width:470px;"}
        .hexagon-icon{ class: "#{factor_score[:pass] ? 'favorable' : 'less_favorable'}" }
        .span.first
          .factor-name
            = factor_name
      .rhs-sec.pull-right
        .slider{:style=>"width:#{scale_values[:scale_width]}px;"}
          .pointer{ class: "#{factor_score[:pass] ? '' : 'less_favorable'}", style: "left: #{scale_values[:marker_position]-20}px;" }
            .score-indicater
              = scale_values[:company_norm_bucket_name]
            .arrow
          .range{ style: "margin-left: #{scale_values[:range_offset]}px;width: #{scale_values[:range_width]}px;" }
      .clr
      .divider1
      .factor-description
        = factor_score[:description]
      .divider1
