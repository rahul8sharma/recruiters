= render :partial => "shared/report_header"      

.factor_fit.report_content
  .report_title
    Factors under Job Role Fit
  .instruction1
    Favorable 
  .instruction2
    Less Favorable 
  .factors_container
    - @factors_by_fit[@job_fit].each_with_index do |factor,index|
      - measured = @measured_factors_ids.include?(factor.id)
      - if measured
        %div{ class: "factor_#{index+1} #{@candidate_factor_scores[factor.id].pass ? 'favorable' : 'less_favorable'}" }
          .wrapper{:style=>"margin-top: 30px;"}
            = factor.name
  .bottom_sec
    .title_1
      Job Role Fit
    .strength_1
      = @job_fit_grade
    .title_2
      Team Fit
    .strength_2
      = @team_fit_grade
    .title_3
      Company Fit
    .strength_3
      = @company_fit_grade
      
= render :partial => "shared/report_footer", :locals => { :current_page => 2 }      
      
.page-break       
