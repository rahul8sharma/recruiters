%li
  %input{name: "candidates[#{index-1}][name]", type: "hidden"}
  %input{name: "candidates[#{index-1}][industry_id]", type: "hidden", value: @company.industry_id}
  .count= index
  %input.span4.first{name: "candidates[#{index-1}][name]", type: "text", placeholder: "Full Name", value: (candidate[:name])}
  %input.span4.left-offset1{name: "candidates[#{index-1}][email]", type: "text", placeholder: "Email id", value: (candidate[:email])}
  %input.span4.left-offset1{name: "candidates[#{index-1}][mobile]", type: "text", placeholder: "Contact number (optional)", value: (candidate[:mobile])}
  .control
    %select.span4{name: "candidates[#{index-1}][functional_area_id]", style: "width:200px;"}
      - @functional_areas.each do |fa|
        %option{ value: fa.id, selected: candidate[:functional_area_id] == fa.id }
          = fa.name
  .clr
