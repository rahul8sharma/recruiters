.create-test
  = form_for @assessment, :as => :assessment, :url => send_test_to_candidates_company_assessment_path(:company_id => params[:company_id], :id => params[:id]), multipart: true, method: :put, html: { class: "creat-test-form" } do |f|
    %input{ type:'hidden', name: 'candidate_stage', value: params[:candidate_stage] }
    %input{:type => "hidden", name: "candidate_ids", value: params[:candidates].keys.join(",") }
    .create-test.send-test-to-candidate
      .inn.first
        .page-title Test - #{@assessment.name}

      .inn.gray-gradient
        = render :partial => "shared/test-flow-sub-nav"
        .divider2
        .email_recipients.medium-text
          %b Notify the following email addresses on the completion of a test by a candidate:
          %input{ type:'text', name: 'report_email_recipients', placeholder:' Enter email addresses separated by commas. Do not add candidate emails here.'}
        .divider2
        .medium-text
          %b Test will be sent to the following candidates:
          (Please uncheck the candidates you don't wish to send the test to)
        %ul.unstyled.clearfix.candidate-list-to-send
          - params[:candidates].each do |id,candidate_data|
            -  email = candidate_data[:email]
            %li
              %label{ class: "font-normal" }
                %input{:type => "checkbox", name: "candidates[#{candidate_data[:id]}]", checked: true}
                %input{:type => "hidden", name: "candidate_names[#{id}][name]", value: params[:candidates][id][:name]}
                #{params[:candidates][id][:name]} &lt;#{email}&gt;
        .divider2
        .test-text-to-send
          .title
            Test Title
          .massage-body.subject
            = @assessment.name
          .title
            Subject
          .massage-body.subject
            &lt;Candidate Name&gt;, #{@company.name} has chosen you to write an Assessment
          .title
            Message
          .massage-body.massage
            %p
              Hello &lt;Candidate Name&gt;,
            %p
              %b #{@company.name}
              has arranged for you to complete a Jombay Suitability Questionaire.
            %p
              To proceed, please click the weblink listed below or visit it by copy-pasting the URL into your web browser's address bar.
            %p
              %b
                URL: &lt;candidate specific url&gt;
            %p
              If you face any technical difficulties or have any queries please feel free to reach us at
              %a{:href=>"mailto:prakhar@jombay.com", :title=>"For any queries Mail to Prakhar"}
                prakhar@jombay.com.
              %br
              You can also call us at
              %b+91 87960 29607
            %p
              Best Regards,
              %br/
              Prakhar Srivastava
              %br/
              Jombay
        %label.pull-left.invitation-sms.medium-text
          Also send test invitations to candidates via SMS
          %input{:type=>"checkbox"}
        .pull-right
          %a.span.line-height2{:href=> add_candidates_company_assessment_path(:company_id => params[:company_id], :id => @assessment.id), :title => "cancel"}
            Cancel
          %button.btn.btn-info.span
            Send
        .clr

