.trait-show
  .span21.page-title.first
    .divider1
    AID #{@assessment.id} - #{@assessment.name}
  %a.btn.btn-warning.pull-right.btn-big.span{ href: add_candidates_company_assessment_path(:company_id => params[:company_id], :id => params[:id]) }
    Send this Assessment
  .clr
  .divider2
  = render :partial => "shared/candidate-content-sub-nav"

  //%a.btn.btn-warning.pull-right{:href => norms_company_assessment_path(:company_id => params[:company_id], :id => params[:id]), :title => "Edit Test"}
  //  Edit Test
  .padding-all2.border-warning.shifted-up1
    .large-text
      .span4.first
        Trait
      .span16.left-offset1
        Definition
      .span6.left-offset1
        Acceptable Score Range
    .clr
    .divider1

    %ul.unstyled.semi-muted
      - @assessment_factor_norms.each do |factor_norm|
        %li
          .divider1
          .extra-medium-text
            .span4.first
              = factor_norm.factor.name
            .span16.left-offset1
              = factor_norm.factor.definition
            .span6.left-offset1
              #{factor_norm.from_norm_bucket.name} - #{factor_norm.to_norm_bucket.name}
            //.span
            //  #{factor_norm.critical? ? "Yes":"No"}
          .clr
          .divider1
    - if @other_norms.empty?
      .divider1
    - else
      .border-bottom-grayLighter.divider2
      .large-text
        .span4.first
          Miscellaneous Trait
        .span16.left-offset1
          Definition
        .span6.left-offset1
          Acceptable Score Range
      .clr
      .divider1
      
      %ul.unstyled.semi-muted
        - @other_norms.each do |factor_norm|
          %li
            .divider1
            .extra-medium-text
              .span4.first
                = factor_norm.factor.name
              .span16.left-offset1
                = factor_norm.factor.definition
            .clr.left-offset1
            .divider1
    .divider1

