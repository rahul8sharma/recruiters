.fields
  - if job_factor_norm.norm_min.to_f.zero?
    .pull-left
      %input{name: "selected_factor", type: 'checkbox', index: (index)}
      = job_factor_norm.factor.name
      %br
      = job_factor_norm.factor.definition
    .pull-right
      - if job_factor_norm.id.present?
        %input{name: (id_name), type: 'hidden', value: job_factor_norm.id, index: (index), disabled: 'disabled'}
      %input{name: (fa_name), type: 'hidden', value: job_factor_norm.functional_area_id, disabled: 'disabled', index: (index)}
      %input{name: (industry_name), type: 'hidden', value: job_factor_norm.industry_id, disabled: 'disabled', index: (index)}
      %input{name: (exp_name), type: 'hidden', value: job_factor_norm.job_experience_id, disabled: 'disabled', index: (index)}
      %input{name: (factor_name), type: 'hidden', value: job_factor_norm.factor_id, disabled: 'disabled', index: (index)}
      
      %input{name: (norm_min_name), type: 'text', value: (job_factor_norm.norm_min.to_f), disabled: 'disabled', index: (index)}
      %input{name: (norm_max_name), type: 'text', value: (job_factor_norm.norm_max.to_f), disabled: 'disabled', index: (index)}

      %input{name: critical_field, type: 'hidden', id: "critical_#{index}", index: (index), value: (job_factor_norm.critical? ? "on" : "off"), disabled: 'disabled'}      
      %input{name: critical_checkbox_name, id: "critical_checkbox_#{index}", type: 'checkbox', index: (index), checked: job_factor_norm.critical?, disabled: 'disabled'}
    .clr        
  - else
    .pull-left
      %input{name: "selected_factor", type: 'checkbox', index: (index), checked: true}
      = job_factor_norm.factor.name
      %br
      = job_factor_norm.factor.definition
    .pull-right
      - if job_factor_norm.id.present?
        %input{name: (id_name), type: 'hidden', value: job_factor_norm.id, index: (index)}
      %input{name: (fa_name), type: 'hidden', value: job_factor_norm.functional_area_id, index: (index)}
      %input{name: (industry_name), type: 'hidden', value: job_factor_norm.industry_id, index: (index)}
      %input{name: (exp_name), type: 'hidden', value: job_factor_norm.job_experience_id, index: (index)}
      %input{name: (factor_name), type: 'hidden', value: job_factor_norm.factor_id, index: (index)}
       
      %input{name: (norm_min_name), type: 'text', value: (job_factor_norm.norm_min.to_f), index: (index)}
      %input{name: (norm_max_name), type: 'text', value: (job_factor_norm.norm_max.to_f), index: (index)}
      
      %input{name: critical_field, type: 'hidden', id: "critical_#{index}", index: (index), value: (job_factor_norm.critical? ? "on" : "off")}      
      %input{name: critical_checkbox_name, type: 'checkbox', index: (index), checked: job_factor_norm.critical?}
    .clr
    
    
