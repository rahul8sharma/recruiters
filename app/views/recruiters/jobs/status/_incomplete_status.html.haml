- content_for :recruiter_title do
  .recruiter_title
    .content
      .main
        Jobs
    .content
      .medium_text
        Here is the list of incomplete jobs on Jombay.com.
      .pull-right
        = bootstrap_paginate @jobs, :inner_window => 0, :outer_window => 0, :previous_label => "&laquo;", :next_label => "&raquo;"
      .divider1
- content_for :sidebar do
  =render :partial => "recruiters/shared/help_block"

- if @jobs.present?
  %ul.listing
    - @jobs.each do |job|
      = render :partial => "recruiters/dashboard/section/incomplete_job", :locals => {:job => job}
- else
  There are 0 jobs