      %label.checkbox.span4.first
        %input{:type => "checkbox", :value => ""}
        Involves Travel
      %label.checkbox.span4
        %input{:type => "checkbox", :value => ""}
        Government Job
      .clr
      %label.checkbox.span4.first
        %input{:type => "checkbox", :value => ""}
        Vehicle is required
      %label.checkbox.span4
        %input{:type => "checkbox", :value => ""}
        This is a Walk in event
      .clr


  .form-actions
    %a.pull-left{:class => "", :href => "#"}
