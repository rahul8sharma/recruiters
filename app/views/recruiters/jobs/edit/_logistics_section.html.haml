= form_tag recruiters_jobs_path(:id => @job.uuid, :section => @section), :method => :put, "data-logistics" => true, :class => "form-horizontal margin" do
  .control-group
    %label.control-label
      Type of Employment*
    .controls
      = select_tag("kind_of", options_from_collection_for_select(@master_data[:kind_of_job], :id, :name), :prompt => "Select the job type", :class => "span9 first fl_none")
  .control-group
    %label.control-label
      Annual Salary*
    .controls
      %label.radio.span3.first
        %input#optionsRadios1{:checked => "", :name => "salary[range][]", :type => "radio", :value => "1"}
          Range
      %label.radio.span3
        %input#optionsRadios2{:checked => "", :name => "salary[range][]", :type => "radio", :value => "0"}
          No Constraint
  .control-group
    %label.control-label
      
    .controls
      .span.first 
        %strong.line_height2 Rs
      = select_tag("salary[min_range]", salary_options, :prompt => "<Min Salary>", :class => "span3 pull-left", "data-salary" => true, :disabled => true)
      .span
        %strong.line_height2 To
      = select_tag("salary[max_range]", salary_options, :prompt => "<Max Salary>", :class => "span3 pull-left", "data-salary" => true, :disabled => true)
      .span
        %strong.line_height2 In Lakhs/ Year
    .controls
      %span.error.help-inline{:for => :max_salary, :generated => "true"}
  .control-group
    %label.control-label
    .controls
      %label.checkbox
        = check_box_tag("salary[show]", "show", false)
        -#%input{:type => "checkbox", :value => ""}
        Do not disclose salary to candidates

  .control-group
    %label.control-label.pull-left
      Perks
      .label_subtitle 
        Check the perks which
        %br/
        you offer as a part of the job
    .span10
      - @master_data[:perks].each_with_index do |perk, index|
        %label.checkbox.span5.first
          = check_box_tag("perk[]", perk.id, false)
          #{ perk.name }
        .clr

  .control-group
    %label.control-label
      Additional Perks
    .controls
      = text_area_tag("additional_perk", "", :placeholder => "Type additional perks here", :rows => 4, :class => "span10 first")
      -# %textarea{:placeholder => "Type additional perks here"}

  .control-group
    %label.control-label.pull-left
      Shift Timings
    .span10
      - @master_data[:time_slots].each_with_index do |slot, index|
        %label.checkbox.span5.first
          = check_box_tag("time_slot[]", slot.id, false)
          #{ slot.name }
        .clr

  .control-group
    %label.control-label.pull-left
      Weekly offs on
    .span10
      - @master_data[:weekdays].each_with_index do |weekday, index|
        %label.checkbox.span5.first
          = check_box_tag("offday[]", weekday.id, false)
          #{ weekday.name }
        .clr
  .control-group
    %label.control-label.pull-left
      Additional information
      .label_subtitle 
        Check whichever applicable.
    .span10
      %label.checkbox.span5.first
        = check_box_tag("additional_info[]", additional_info_enum[:involves_travel], false)
        = additional_info_enum[:involves_travel]
      %label.checkbox.span5
        = check_box_tag("additional_info[]", additional_info_enum[:government_job], false)
        = additional_info_enum[:government_job]
      .clr
      %label.checkbox.span5.first
        = check_box_tag("additional_info[]", additional_info_enum[:own_vehicle], false)
        = additional_info_enum[:own_vehicle]
      %label.checkbox.span5
        = check_box_tag("additional_info[]", additional_info_enum[:involves_travel], false)
        = additional_info_enum[:walkin]
      .clr


  .form-actions
    %a.pull-left{:class => "", :href => recruiters_jobs_path(:id => @job.uuid, :section => @prev_section)}
      Previous
    %button.pull-right{:class => "btn btn-info offset1", :type => "submit"}
      %strong Next Step
    %a.pull-right{:class => "", :href => "#"}
      %strong save and continue later
    .clr
