- content_for :recruiter_title do
  .recruiter_title
    .content
      .main
        Post a Job
    .content
      .main_sub
        Hi Employer Name,
      .medium_text
        Fill the following details about your job. These details are essential for the candidates to know.
      .divider1

- job = job_template_struct
= form_tag recruiters_jobs_path(:id => @job.uuid, :section => @section), :method => :put, "data-job_details" => true, :class => "form-horizontal margin", "data-job_posting_form" => true do
  = hidden_field_tag :posted_by, current_user.sid
  = hidden_field_tag "continue_later", false
  .control-group
    %label.control-label
      Job Title* 
      .label_subtitle 
        This is the first thing candidates see
    .controls
      = text_field_tag("title", @job.try(:title), placeholder: "Type title here", class: "span9 first")
      %br/
  .control-group
    %label.control-label
      Industry* 
    .controls
      = select_tag("industry", options_from_collection_for_select(@master_data[:industries], :id, :name), :prompt => "Select one or more", class: "span9 first fl_none", "data-preselect" => @job.try(:industries).try(:first), "data-job_industry_pseudo_select" => true)
      %div{:data => {"preferred-job_industry-container" => true}}
    .controls
      = hidden_field_tag "job_industry_ids"
      %br/

  .control-group
    %label.control-label
      Functional Area of this Role*  
    .controls
      = select_tag("category", top_list_for_select(:job_categories), :prompt => "Select one or more", class: "span9 first fl_none", "data-path" => traversable_from_recruiters_job_path(":id", relation: "job_category_in", source_class: "Opus::JobCategory", bucket_type: "Opus::WorkProfile"), "data-preselect" => @job.try(:categories).try(:first), "data-job-category" => true, "data-job_category_pseudo_select" => true)
      %div{:data => {"preferred-job_category-container" => true}}
        -#= render :partial => "persia/users/edit/basic_section/job_preferences/job_category", collection: (@basic[:preferred_job_categories] rescue [])
    .controls
      = hidden_field_tag "job_category_ids"
      %br/

  .control-group
    %label.control-label
      Job Profile* 
    .controls
      = select_tag("profile", options_from_collection_for_select(@master_data[:job_profiles], :id, :name), :prompt => "Select one or more", class: "span9 first fl_none", "data-preselect" => @job.try(:profiles).try(:first), "data-job-profile" => true, "data-job_profile_pseudo_select" => true)
      %div{:data => {"preferred-job_profile-container" => true}}
        -#= render :partial => "persia/users/edit/basic_section/job_preferences/job_category", collection: (@basic[:preferred_job_categories] rescue [])
    .controls
      = hidden_field_tag "job_profile_ids"
      %br/

  .control-group
    %label.control-label
      Number of Openings* 
    .controls
      = text_field_tag("total_openings", "", placeholder: "Type a number", class: "span3 first", "data-preselect" => @job.try(:total_openings).try(:first))
      %br/

  .control-group
    %label.control-label
      Job Location* 
      .label_subtitle 
        Eg. Software Engineer, Marketing Manager, Data Entry Operator, etc.
    .controls
      = select_tag("location", top_list_for_select(:india_cities), :prompt => "Select one or more", class: "span9 first fl_none", "data-preselect" => @job.try(:locations).try(:first), "data-job_location_pseudo_select" => true)
      %div{:data => {"preferred-job_location-container" => true}}
    .controls
      = hidden_field_tag "job_location_ids"
      %br/
  .form-actions
    %button.pull-right{:class => "btn btn-info offset1", :type => "submit"}
      %strong Next Step
    %a.pull-right{:class => "", :href => "#", :data => {"continue_later" => true}}
      %strong save and continue later
    .clr

%script#preferred-job_industry{type: 'text/x-template'}
  = render :partial => "recruiters/jobs/edit/job_details/job_industry", locals: {job_industry: preferred_job_industry_template_struct}
%script#preferred-job_category{type: 'text/x-template'}
  = render :partial => "recruiters/jobs/edit/job_details/job_category", locals: {job_category: preferred_job_category_template_struct}
%script#preferred-job_profile{type: 'text/x-template'}
  = render :partial => "recruiters/jobs/edit/job_details/job_profile", locals: {job_profile: preferred_job_profile_template_struct}
%script#preferred-job_location{type: 'text/x-template'}
  = render :partial => "recruiters/jobs/edit/job_details/job_location", locals: {job_location: preferred_job_location_template_struct}