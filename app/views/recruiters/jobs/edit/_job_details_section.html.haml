    %label.control-label
      Job Location* 
      .label_subtitle 
        Eg. Software Engineer, Marketing Manager, Data Entry Operator, etc.
    .controls
      = select_tag("work_experience[][location][query_options][geography_id]", top_list_for_select(:india_cities), class: "span9 first fl_none", "data-preselect" => "job.try(:locations).try(:first).try(:geography_id)")
      .badge_label.clearfix.span9.first
        .badge_count
          1
        .badge_content
          pune
        %a.close{"data-dismiss" => "alert", :type => "button"} ×
