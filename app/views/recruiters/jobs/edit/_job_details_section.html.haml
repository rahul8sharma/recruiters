      = select_tag("work_experience[][profile]", options_from_collection_for_select(@master_data[:work_profiles], :id, :name), :include_blank => "Choose Work Profile", class: "span9 first fl_none", "data-preselect" => "job.try(:work_profiles).try(:first).try(:id)")
      .badge_label.clearfix.span9.first
        .badge_count
          1
        .badge_content
          Marketing, Advertising, Market Reasearch, public...
        %a.close{"data-dismiss" => "alert", :type => "button"} ×
