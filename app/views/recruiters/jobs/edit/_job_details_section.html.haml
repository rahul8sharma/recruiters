%form.form-horizontal
  .control-group
    %label.control-label
      Job Title* 
      .label_subtitle 
        This would be the title of your job
    .controls
      %input#job_title{:placeholder => "type the title of the job", :type => "text", :class => "span10 first"}
  .control-group
    %label.control-label
      Industry* 
      .label_subtitle 
        Add an industry that describes your company the best
    .controls
      = select_tag("work_experience[][industry]", options_from_collection_for_select(@master_data[:industries], :id, :name), :include_blank => "Choose Industry", class: "span9 first fl_none", "data-preselect" => "job.try(:industries).try(:first).try(:id)")
      .badge_label.clearfix.span9.first
        .badge_count
          1
        .badge_content
          Marketing, Advertising, Market Reasearch, public...
        %a.close{"data-dismiss" => "alert", :type => "button"} ×

  .control-group
    %label.control-label
      Functional Area of this role*  
    .controls
      = select_tag("work_experience[][category]", options_from_collection_for_select(@master_data[:job_categories], :id, :name), :include_blank => "Choose Job Category", class: "span9 first fl_none", "data-preselect" => "job.try(:job_categories).try(:first).try(:id)")
      .badge_label.clearfix.span9.first
        .badge_count
          1
        .badge_content
          Marketing, Advertising, Market Reasearch, public...
        %a.close{"data-dismiss" => "alert", :type => "button"} ×
      .badge_label.clearfix.span9.first
        .badge_count
          1
        .badge_content
          Marketing, Advertising, Market Reasearch, public...
        %a.close{"data-dismiss" => "alert", :type => "button"} ×

  .control-group
    %label.control-label
      Job Profile* 
      .label_subtitle 
        Eg. Software Engineer, Marketing Manager, Data Entry Operator, etc.
