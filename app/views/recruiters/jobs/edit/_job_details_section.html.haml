- job = job_template_struct
%form.form-horizontal
  .control-group
    %label.control-label
      Job Title* 
      .label_subtitle 
        This would be the title of your job
    .controls
      %input#job_title{:placeholder => "type the title of the job", :type => "text", :class => "span10 first"}
  .control-group
    %label.control-label
      Industry* 
      .label_subtitle 
        Add an industry that describes your company the best
    .controls
      = select_tag("work_experience[][industry]", options_from_collection_for_select(@master_data[:industries], :id, :name), :include_blank => "Choose Industry", class: "span9 first fl_none", "data-preselect" => "job.try(:industries).try(:first).try(:id)", "data-job_industry_pseudo_select" => true)
      %div{:data => {"preferred-job_industry-container" => true}}

  .control-group
    %label.control-label
      Functional Area of this role*  
    .controls
      = select_tag("work_experience[][category]", top_list_for_select(:job_categories), :include_blank => "Select Category", class: "span9 first fl_none", "data-path" => traversable_from_recruiters_job_path(":id", relation: "job_category_in", source_class: "Opus::JobCategory", bucket_type: "Opus::WorkProfile"), "data-preselect" => "job.try(:job_categories).try(:first).try(:id)", "data-job-category" => true, "data-job_category_pseudo_select" => true)
      %div{:data => {"preferred-job_category-container" => true}}
        -#= render :partial => "persia/users/edit/basic_section/job_preferences/job_category", collection: (@basic[:preferred_job_categories] rescue [])

  .control-group
    %label.control-label
      Job Profile* 
      .label_subtitle 
        Eg. Software Engineer, Marketing Manager, Data Entry Operator, etc.
    .controls
      = select_tag("work_experience[][category]", options_from_collection_for_select(@master_data[:job_profiles], :id, :name), class: "span9 first fl_none", "data-preselect" => "job.try(:work_profiles).try(:first).try(:id)", "data-job-profile" => true, "data-job_profile_pseudo_select" => true)
      -#= select_tag("work_experience[][profile]", "", class: "span9 first fl_none", "data-preselect" => job.try(:work_profiles).try(:first).try(:id), "data-job-profile" => true, "data-type" => "recommendation", "data-job_profile_pseudo_select" => true)
      %div{:data => {"preferred-job_profile-container" => true}}
        -#= render :partial => "persia/users/edit/basic_section/job_preferences/job_category", collection: (@basic[:preferred_job_categories] rescue [])

  .control-group
    %label.control-label
      Number of Openings* 
    .controls
      %input#job_title{:placeholder => "1", :type => "text", :class => "span3 first"}

  .control-group
    %label.control-label
      Job Location* 
      .label_subtitle 
        Eg. Software Engineer, Marketing Manager, Data Entry Operator, etc.
    .controls
      = select_tag("work_experience[][location][query_options][geography_id]", top_list_for_select(:india_cities), class: "span9 first fl_none", "data-preselect" => "job.try(:locations).try(:first).try(:geography_id)", "data-job_location_pseudo_select" => true)
      %div{:data => {"preferred-job_location-container" => true}}
  .form-actions
    %button.pull-right{:class => "btn btn-info offset1", :type => "button"}
      %strong Next Step
    %a.pull-right{:class => "", :href => "#"}
      %strong save and continue later
    .clr

%script#preferred-job_industry{type: 'text/x-template'}
  = render :partial => "recruiters/jobs/edit/job_details/job_industry", locals: {job_industry: preferred_job_industry_template_struct}
%script#preferred-job_category{type: 'text/x-template'}
  = render :partial => "recruiters/jobs/edit/job_details/job_category", locals: {job_category: preferred_job_category_template_struct}
%script#preferred-job_profile{type: 'text/x-template'}
  = render :partial => "recruiters/jobs/edit/job_details/job_profile", locals: {job_profile: preferred_job_profile_template_struct}
%script#preferred-job_location{type: 'text/x-template'}
  = render :partial => "recruiters/jobs/edit/job_details/job_location", locals: {job_location: preferred_job_location_template_struct}