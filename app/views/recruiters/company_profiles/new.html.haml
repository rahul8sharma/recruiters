- content_for :javascripts do
  = javascript_include_tag "company_profiles/new"
- content_for :recruiter_title do
  .recruiter_title
    .content
      .main
        Company Details
    .content
      .main_sub
        Hi User Name,
      .medium_text 
        Fill the following details of your organization. We need to know these before you post your first job.
      .divider1

- content_for :sidebar do
  = render :partial => "recruiters/shared/help_block"
.rec_rhs
  .clearfix
    .divider2
    .title.faded_dark
      Edit Profile
    = form_tag create_new_recruiters_company_profiles_path(:redirect_to => ""), :id => "newCompanyProfileForm", :class => "form-horizontal", :method => :post do
      = fields_for :company do |f|
        .control-group
          = f.label :type, "I am*", :class => "control-label"
          .controls
            = f.text_field :type, :placeholder => "Prefilled", :class => "span9"
        .control-group
          = f.label :name, "Company Name*", :class => "control-label"
          .controls
            = f.text_field :name, :placeholder => "Type company name here", :class => "span9"
        .control-group
          = f.label :description, "About Company", :class => "control-label"
          .controls
            = f.text_area :description, :placeholder => "Tell us more about your company", :rows => 4, :class => "span9"
        .control-group
          = f.label :url, "Company Website", :class => "control-label"
          .controls
            = f.text_field :url, :placeholder => "Type company website", :class => "span9"
        .control-group
          = f.label "location[:geography_id][]", "Location*", :class => "control-label"
          .controls
            = f.select("location[:geography_id][]", top_list_for_select(:india_cities), {:prompt => "Select City"}, {:class => "span9 fl_none"})
        .control-group
          = f.label :address, "Address", :class => "control-label"
          .controls
            = f.text_area :address, :placeholder => "Type company address (This address will be shown in case of a walk-in event)", :rows => 4, :class => "span9"
        .control-group
          = f.label :logo, "Company Logo", :class => "control-label"
          .controls
            .span3.divider6.gray_border
              = image_tag("http://www.placehold.it/10x10")
            %input#companyLogo.pull-left{:class=> "span9", :placeholder => "Prefilled", :type => "file"}
        .form-actions
          %button.pull-right{:class => "btn btn-info offset1 medium_text", :type => "submit"}
            %strong Next Step
          .clr
