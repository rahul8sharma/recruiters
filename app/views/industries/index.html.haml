%h1 All industries
- if can? :create, "Industry"
  = link_to "Manage Industries", manage_industries_path  
  
.pagination.pull-right        
  = paginate @industries        
.clr     

%table
  %tr
    %th ID
    %th Name
    %th Active
  - for industry in @industries do
    %tr
      %td 
        = industry.id
      %td 
        = industry.name
      %td 
        = industry.active  

%br
.pagination.pull-right        
  = paginate @industries        
.clr     
