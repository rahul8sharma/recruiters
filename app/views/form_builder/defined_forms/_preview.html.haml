.defined-form
  .form{style: "border: 1px solid #ccc;padding:20px;"}
    %h4 #{defined_form.name.html_safe}
    %br
    - defined_fields = Vger::Resources::FormBuilder::DefinedField.where(query_options: {active: true, defined_form_id: defined_form.id}, :order => "field_order ASC").all.to_a
    - defined_fields.each do |defined_field|
      = "#{defined_field.label}&nbsp;&nbsp;&nbsp;&nbsp;".html_safe
      = render_defined_field(defined_field)
      .divider1
.divider2          
