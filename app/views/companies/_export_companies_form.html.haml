= form_for :company, url: export_companies_companies_path, :method => :post do |f|
  %fieldset
    %legend 
      %strong Download companies statistics
    = f.fields_for "args" do |af|
      %p
        Notification Email : 
        = af.text_field :email, :value => "product@jombay.com"
      %p
        Days : 
        = af.text_field :days, :value => 3  

    .actions
      = f.submit 'Download Companies'
