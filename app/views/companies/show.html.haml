.company_profile
  .page-title
    .divider1
    Settings

  .divider2
  = render :partial => "shared/settings-content-sub-nav"

  .padding-all2.border-warning.shifted-up1.extra-medium-text
    .span19.margin-auto
      %ul
        %li.padding-all1.big-text
          .span10.gray-dark
            %i.icon-group
            Company Name:
          .span7
            #{@company.name}
          .clr
        %li.padding-all1.big-text
          .span10.gray-dark
            %i.icon-globe
            Company website URL:
          -if @company.website
            %a.span7{:href => "#{h @company.website}", :title => "Click Here to go #{@company.website} website"}
              = @company.website
          - else
            .span7
              Not Available
          .clr

        %li.padding-all1.big-text
          .span10.gray-dark
            %i.icon-home
            Company Head Quarter Location:
          .span7
            - if @hq_location
              = @hq_location.address
            - else
              = h nil
          .clr

        %li.padding-all1.big-text
          .span10.gray-dark
            %i.icon-map-marker
            Company Head Quarter Address:
          .span7
            = h @company.hq_address
          .clr
      .divider2
      - if is_superuser?
        %a.btn.btn-warning.inverse.medium-text.pull-left.bold{href: edit_company_path(@company)}
          Edit Company Profile
        %a.btn.btn-warning.medium-text.pull-right.left-offset1{href: add_subscription_company_path(@company.id)}
          Add Subscription
      .clr
    .divider4
.divider4


