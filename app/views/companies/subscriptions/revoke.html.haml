.usage
  .divider4
  .revoke-subscriptions.margin-auto.span15
    = form_tag(url: revoke_subscriptions_company_path(@company.id, @child.id), method: :post) do |f|
      .pannel
        .heading
          Remove Subscriptions from Account: #{@child.id} :  #{@child.name}
        .divider1
        .content.extra-medium-text
          Active Subscriptions: #{@child.unused_invitations_count}
          .divider1
          .margin-auto.span9
            = text_field_tag :no_of_invitations, "", class: "fw", :placeholder => "Enter no of subscriptions"
        .divider3
      .divider1
      = submit_tag "Done", class: "btn btn-warning big pull-right span extra-medium-text"
      .clr
