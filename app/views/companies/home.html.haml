%h1
  Standard Assessments
%ul
  - @standard_assessments.each do |standard_assessment|
    %li
      = link_to standard_assessment.name, company_standard_assessment_path(@company, standard_assessment)
.divider1
.pull-right
  - if (@standard_assessments.present?)
    .muted.extra-medium-text
      .span.line-height2
        Go to Page
      %select.span2{onchange:"location = this.options[this.selectedIndex].value;"}
        - @standard_assessments.total_pages.times do |page|
          %option{selected: params[:page].to_i == (page + 1),value: home_company_path(@company, :page => page + 1), }
            = page + 1
      .clr
.clr      
